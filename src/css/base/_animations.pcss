@keyframes animation-falling {
    from {
        transform: translateY(-100vh);
    }

    to {
        transform: translateY(0);
    }
}

@keyframes fade-in {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

@keyframes expand-width {
    from {
        width: 0%;
    }

    to {
        width: 100%;
    }
}

@keyframes slide-left {
    from {
        transform: translateX(-50vw);
    }

    to {
        transform: translateX(0);
    }
}
