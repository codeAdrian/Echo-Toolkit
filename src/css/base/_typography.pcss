h1,
h2,
h3,
h4,
h5,
h6 {
    margin: 0;
    font-weight: 100;
    font-family: var(--font__heading);
    letter-spacing: 0.02em;
}

h1 {
    text-shadow: 0.2rem 0.2rem black;
    font-size: 7em;
    line-height: 1.25;
    padding-bottom: 0.2em;
}

h2 {
    font-size: calc((52 / 16) * 1rem);
    line-height: 1.25;
    padding-bottom: 0.3em;
}

h3 {
    font-size: calc((36 / 16) * 1rem);
    line-height: 1.25;
}

ul {
    list-style: square;
}

strong {
    letter-spacing: 0.03em;
}
